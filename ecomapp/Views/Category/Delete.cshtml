@model Category

@*
<h1 class="text-sm-start"> Create Category</h1> *@

<form method="post">
    <input hidden asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-center text-primary">
                Delete Category
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="pb-2">
            </label>
            <input disabled asp-for="Name" type="text" placeholder="Enter the Display Order" class="form-control">
            @* <span asp-validation-for="Name" class="text-danger"></span> *@
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="pb-2">

            </label>
            <input disabled asp-for="DisplayOrder" type="text" placeholder="Enter the Display Order"
                class="form-control">
            @* <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
        </div>
        <div class="row">
            <button type="submit" class="btn btn-danger col-6 col-md-3">
                Delete Category
            </button>
            <a asp-asp-controller="Category" asp-action="Index" class="btn btn-secondary col-6 col-md-3">
                Back to list
            </a>

        </div>
    </div>
</form>
